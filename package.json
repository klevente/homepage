    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "mdsvex": "^0.11.0",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.70.0",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "svelte-preprocess": "^5.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
