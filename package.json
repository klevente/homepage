  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build && node scripts/convert-404-page-to-use-absolute-paths.js",
    "build:vercel": "vite build && node scripts/convert-404-page-to-use-absolute-paths.js --vercel",
